Module Operators

    Sub Main()
        'Let's do math
        'Comments require " ' " at the start of the comment but not at the end of the comment.
        Console.WriteLine(2 + 2)
        Console.ReadLine()
        Console.WriteLine(7 - 1)
        Console.ReadLine()
        Console.WriteLine(5 * 5)
        Console.ReadLine()
        Console.WriteLine(7 / 3)
        Console.ReadLine()
        Console.WriteLine(7 \ 3)
        Console.ReadLine()
        Console.WriteLine(7 Mod 3)
        Console.ReadLine()
        ' concatenate stuff
        'use with caution
        'conceatenate (to bring togetyher or aggregate) i used to create
        'Strings and Is acomplished by quoting the object and using
        'both "+" And "&" symbols to aggregate the objects
        Console.WriteLine("2" + "2")
        Console.ReadLine()
        Console.WriteLine("Hello" & "," & " " + "world")

        'compare stuff
        'uses boolean
        Console.WriteLine(1 > 3)
        Console.ReadLine()
        Console.WriteLine(1 < 3)
        Console.ReadLine()
        Console.WriteLine(1 = 3)
        Console.ReadLine()
        Console.WriteLine(1 <> 3)
        'not equal
        Console.ReadLine()
    End Sub

End Module
